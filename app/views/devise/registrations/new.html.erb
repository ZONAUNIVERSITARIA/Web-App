<div class="contenido">
<h2>Registrarme</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, required: true, autofocus: true, label: "Nombre" %>
    <%= f.input :email, required: true, autofocus: true, label: "Correo" %>
    <%= f.input :password,label: "Contraseña" , required: true, hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmar contraseña",required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrarme" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>