<%= form_for (@article) do |f| %>
	<div class="field">
		Portada: <%= f.file_field :cover%>
	</div>
	<div class="field">
		<%= f.text_field :title, placeholder: "Título" %>
	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Escribe tu inspiración aquí" %>
	</div>
	<div class="field">
		<%= f.submit "Guardar" , class:"btn be-blue expanded button"%>
	</div>
<%end%>